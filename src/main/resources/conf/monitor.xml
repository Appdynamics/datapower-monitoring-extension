<monitor>
    <name>DataPowerMonitor</name>
    <type>managed</type>
    <description>Collects the metrics from IBM DataPower SOA Appliance</description>
    <monitor-configuration>
    </monitor-configuration>
    <monitor-run-task>
        <execution-style>periodic</execution-style>
        <execution-frequency-in-seconds>40</execution-frequency-in-seconds>
        <name>DataPowerMonitor Monitor Run Task</name>
        <display-name>DataPowerMonitor Task</display-name>
        <description>DataPowerMonitor Task</description>
        <type>java</type>
        <execution-timeout-in-secs>120</execution-timeout-in-secs>
        <task-arguments>
            <argument name="uri" is-required="true" default-value="https://172.16.153.100:5550/service/mgmt/current"/>
            <argument name="username" is-required="false" default-value="admin"/>
            <argument name="password" is-required="false" default-value="welcome"/>
            <!-- Optional Properties  -->
            <!--
            <argument name="proxy-host" is-required="false" default-value=""/>
            <argument name="proxy-port" is-required="false" default-value=""/>
            <argument name="proxy-username" is-required="false" default-value=""/>
            <argument name="proxy-password" is-required="false" default-value=""/>
            <argument name="metric-prefix" is-required="false" default-value="Custom Metrics|Data Power"/>
            -->
        </task-arguments>
        <java-task>
            <classpath>datapower-monitoring-extension.jar</classpath>
            <impl-class>com.appdynamics.monitors.datapower.DataPowerMonitor</impl-class>
        </java-task>
    </monitor-run-task>
</monitor>
